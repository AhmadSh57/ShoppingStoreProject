  <!-- slider-main--------------------------->
@using Test4.Models;





<div class="col-lg-9 col-md-9 col-xs-12 pl">
    <div class="slider-main-container d-block">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>

            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/slider-main/sm-2.jpg" class="d-block w-100" alt="...">
                </div>

                @{
                    WebStoreDbEntities1 database = new WebStoreDbEntities1();

                    //IOrderedQueryable<Test4.Models.Tbl_SliderImage> Query = (from s in database.Tbl_SliderImage select s).OrderBy(a=> a.Sort);

                    //var Query = (from s in database.Tbl_SliderImage select s).OrderBy(a => a.Sort);
                    var Query = database.Tbl_SliderImage.OrderBy(s => s.Sort);
                }

                @foreach (var item in Query)
                {
                    <div class="carousel-item">
                        <a href="@item.Link" type="">
                            <div class="card text-bg-dark ">
                                @*target not defined for this link*@
                                <img src="/images/slider-main/@item.ImageName" class=" active d-block w-100" alt="...">
                                <div class="card-img-overlay">
                                    <h5 class="card-title">@item.ImageCaption</h5>
                                    <p class="card-text"><small>@item.ImageText</small></p>
                                </div>
                            </div>
                        </a>
                    </div>
                }





            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="fa fa-angle-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="fa fa-angle-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
