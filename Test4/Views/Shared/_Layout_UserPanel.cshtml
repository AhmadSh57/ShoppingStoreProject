                                            </a>
                                        </li>
                                        <li class="profile-account-nav-item navigation-link-dashboard">
                                            <a href="#" class="">
                                                <i class="mdi mdi-map-outline"></i>
                                                آدرس ها
                                            </a>
                                        </li>
                                        <li class="profile-account-nav-item navigation-link-dashboard">
                                            <a href="#" class="">
                                                <i class="mdi mdi-email-open-outline"></i>
                                                نظرات
                                            </a>
                                        </li>
                                        <li class="profile-account-nav-item navigation-link-dashboard">
                                            <a href="#" class="">
                                                <i class="mdi mdi-tooltip-text-outline"></i>
                                                اطلاعات حساب
                                            </a>
                                        </li>
                                    </ul>
                                </section>
                            </div>
                        </div>
                        @*@RenderSection("LeftUserInfo", required: false)*@
                        @RenderSection("AccountBox", required: false)
                    </div>
                </div>
            </section>
        </div>
    </div>
    <!-- profile------------------------------->

    @RenderBody()
